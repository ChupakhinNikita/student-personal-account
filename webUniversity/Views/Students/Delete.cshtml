@model webUniversity.Models.Student

@{
    ViewData["Title"] = "Удаление студентов";
}

@section Header {
        <div class="header_section">
            <div class="header_title">
                <p>УНИВЕРСИТЕТ</p>
                <div class="header_divider"> </div>
                <div class="header_portal_title">
                    <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
                </div>
            </div>
        </div>
        <div class="header_section">
            <div class="header_account">
                <div class="back-btn">
                    <a asp-action="Index" asp-controller="StudentRedactor">Редактирование студентов</a>
                </div>
                <div class="back-btn">
                    <a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a>
                </div>
            </div>
        </div>
}
<div class="student_main">
    <h1>Удаление студентов</h1>
    <div class="delete_main">
        <dl class="myRowDel">
            <dt class = "col-sm-2">
                Код
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.code)
            </dd>
            <dt class = "col-sm-2">
                Зачетная книжка
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.gradebook)
            </dd>
            <dt class = "col-sm-2">
                Фамилия
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.lastName)
            </dd>
            <dt class = "col-sm-2">
                Имя
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.firstName)
            </dd>
            <dt class = "col-sm-2">
                Отчество
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.patronomic)
            </dd>
        </dl>
        <dl class="myRowDel">
            <dt class = "col-sm-2">
                ID Группы
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Group.groupID)
            </dd>
            <dt class = "col-sm-2">
               ID Типа обучения
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TuitionType.tuitionTypelID)
            </dd>
            <dt class = "col-sm-2">
                ID Формы обучения
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TuitionForm.tuitionFormlID)
            </dd>
            <dt class = "col-sm-2">
                ID Уровня обучения
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.TrainingLevel.trainingLevelID)
            </dd>
            <dt class = "col-sm-2">
                ID Статуса обучения
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StudentStatus.studentStatusTypeID)
            </dd>
        </dl>
        <dl class="myRowDel">
            <dt class = "col-sm-2">
                ID Специальности
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Speciality.specialityID)
            </dd>
            <dt class = "col-sm-2">
                ID Специализации
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Specialization.specializationID)
            </dd>
            <dt class = "col-sm-2">
                ID Курса
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Course.courseID)
            </dd>
            <dt class = "col-sm-2">
                ID Пользователя
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.User.userID)
            </dd>
            <dt class = "col-sm-2">
                ID Факультета
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Faculty.facultyID)
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <div class="buttons">
            <div class="form-group_btn_1">
                <input type="hidden" asp-for="studentID" />
                <input type="submit" value="Удалить" class="btn btn-primary" />
            </div>
            <div class="form-group_btn_2">
                <a asp-action="Index">
                    <input value="Отмена" class="btn btn-primary" readonly="readonly"> 
                </a>
            </div>
        </div>
    </form>
</div>

