@model IEnumerable<webUniversity.Models.StudentStatus>

@{
    ViewData["Title"] = "Статус студентов";
}

@section Header {
        <div class="header_section">
            <div class="header_title">
                <p>УНИВЕРСИТЕТ</p>
                <div class="header_divider"> </div>
                <div class="header_portal_title">
                    <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
                </div>
            </div>
        </div>
        <div class="header_section">
            <div class="header_account">
                <div class="back-btn">
                    <a asp-action="Create">Создать</a>
                </div>
                <div class="back-btn">
                    <a asp-action="Index" asp-controller="StudentRedactor">Главная страница</a>
                </div>
                <div class="back-btn">
                    <a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a>
                </div>
            </div>
        </div>
}

<div class="student_main">
    <h1>Статус студентов</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Код
                </th>
                <th>
                    Название
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.studentStatusTypeID">Изменить</a> |
                        <a asp-action="Details" asp-route-id="@item.studentStatusTypeID">Детали</a> |
                        <a asp-action="Delete" asp-route-id="@item.studentStatusTypeID">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>