@model webUniversity.Models.Statement

@{
    ViewData["Title"] = "Edit";
}
@section Header {
        <div class="header_section">
            <div class="header_title">
                <p>УНИВЕРСИТЕТ</p>
                <div class="header_divider"> </div>
                <div class="header_portal_title">
                    <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
                </div>
            </div>
        </div>
        <div class="header_section">
            <div class="header_account">
                <div class="back-btn">
                <a asp-action="Index" asp-controller="Employee">Заявления</a>
                </div>
                <div class="back-btn">
                    <a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a>
                </div>
            </div>
        </div>
}

<div class="student_main">
<h1>Редактирование заявления</h1>
    <form asp-action="Edit">
        <div class="student_row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="statementID" />
                <div class="form-group">
                    <label asp-for="code" class="control-label"></label>
                    <input asp-for="code" class="form-control" />
                    <span asp-validation-for="code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="date" class="control-label"></label>
                    <input asp-for="date" class="form-control" />
                    <span asp-validation-for="date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="timeStart" class="control-label"></label>
                    <input asp-for="timeStart" class="form-control" />
                    <span asp-validation-for="timeStart" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="timeEnd" class="control-label"></label>
                    <input asp-for="timeEnd" class="form-control" />
                    <span asp-validation-for="timeEnd" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="isIndividual" class="control-label"></label>
                    <input asp-for="isIndividual" class="form-control" />
                    <span asp-validation-for="isIndividual" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="statementTypeID" class="control-label"></label>
                    <select asp-for="statementTypeID" class="form-control" asp-items="ViewBag.statementTypeID"></select>
                    <span asp-validation-for="statementTypeID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="controlFormID" class="control-label"></label>
                    <select asp-for="controlFormID" class="form-control" asp-items="ViewBag.controlFormID"></select>
                    <span asp-validation-for="controlFormID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="disciplineID" class="control-label"></label>
                    <select asp-for="disciplineID" class="form-control" asp-items="ViewBag.disciplineID"></select>
                    <span asp-validation-for="disciplineID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="controlPeriodID" class="control-label"></label>
                    <select asp-for="controlPeriodID" class="form-control" asp-items="ViewBag.controlPeriodID"></select>
                    <span asp-validation-for="controlPeriodID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="markID" class="control-label"></label>
                    <select asp-for="markID" class="form-control" asp-items="ViewBag.markID"></select>
                    <span asp-validation-for="markID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="professorID" class="control-label"></label>
                    <select asp-for="professorID" class="form-control" asp-items="ViewBag.professorID"></select>
                    <span asp-validation-for="professorID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="studentID" class="control-label"></label>
                    <select asp-for="studentID" class="form-control" asp-items="ViewBag.studentID"></select>
                    <span asp-validation-for="studentID" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="buttons">
            <div class="form-group_btn_1">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group_btn_2">
                <a asp-action="Index">
                    <input value="Cancel" class="btn btn-primary" readonly="readonly"> 
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
