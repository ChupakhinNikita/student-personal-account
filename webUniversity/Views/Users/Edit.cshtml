@model webUniversity.Models.User

@{
    ViewData["Title"] = "Редактирование пользователей";
}
@section Header {
    <div class="header_section">
        <div class="header_title">
            <p>УНИВЕРСИТЕТ</p>
            <div class="header_divider"> </div>
            <div class="header_portal_title">
                <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
            </div>
        </div>
    </div>
    <div class="header_section">
        <div class="header_account">
            <div class="back-btn">
                <a asp-action="Admin" asp-controller="Home">Главная</a>
            </div>
            <div class="back-btn">
                <a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a>
            </div>
        </div>
    </div>
}

<div class="student_main">
    <h1>Редаткирование студентов</h1>
    <form asp-action="Edit">
        <div class="student_row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="userID" />
                <div class="form-group">
                    <label asp-for="authID" class="control-label"></label>
                    <input asp-for="authID" class="form-control" />
                    <span asp-validation-for="authID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="role" class="control-label">Роль</label>
                    <input asp-for="role" class="form-control" />
                    <span asp-validation-for="role" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="login" class="control-label">Логин</label>
                    <input asp-for="login" class="form-control" />
                    <span asp-validation-for="login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="password" class="control-label">Пароль</label>
                    <input asp-for="password" class="form-control" />
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="buttons">
            <div class="form-group_btn_1">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
            <div class="form-group_btn_2">
                <a asp-action="Index">
                    <input value="Отмена" class="btn btn-primary" readonly="readonly"> 
                </a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
