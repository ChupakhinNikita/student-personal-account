@model webUniversity.Models.Professor

@{
    ViewData["Title"] = "Details";
}
@section Header {
        <div class="header_section">
            <div class="header_title">
                <p>УНИВЕРСИТЕТ</p>
                <div class="header_divider"> </div>
                <div class="header_portal_title">
                    <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
                </div>
            </div>
        </div>
        <div class="header_section">
            <div class="header_account">
                <div class="back-btn">
                <a asp-action="Index" asp-controller="Employee">Заявления</a>
                </div>
                <div class="back-btn">
                    <a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a>
                </div>
            </div>
        </div>
}

<div class="student_main">
    <h1>Данные преподавателя </h1>
    <div class="details_main">
        <dl class="myRowDetails">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.code)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.code)
            </dd>
        </dl>
        <dl class="myRowDetails">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.name)
            </dd>
        </dl>
    </div>
    <div class="buttons">
        <div class="form-group_btn_1">
            <a asp-action="Edit" asp-route-id="@Model?.professorID"><input type="submit" value="Edit" class="btn btn-primary" /></a>
        </div>
        <div class="form-group_btn_2">
            <a asp-action="Index">
                <input value="Cancel" class="btn btn-primary" readonly="readonly"> 
            </a>
        </div>
    </div>
</div>

