@using System.Security.Claims

@model webUniversity.Models.User

@{
    ViewData["Title"] = "Администратор";
}

@section Header {
    <div class="header_section">
        <div class="header_title">
            <p>УНИВЕРСИТЕТ</p>
            <div class="header_divider"> </div>
            <div class="header_portal_title">
                <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
            </div>
        </div>
    </div>
    <div class="header_section">
        <div class="header_account">
            <div class="back-btn">
                <a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a>
            </div>
        </div>
    </div>
}

<div class="admin_main">
    <div class="admin_navbar_buttons">
        <a class="navbar-account" asp-controller="Home" asp-action="Admin">
            Личный кабинет      
        </a>
        <a class="navbar-account" asp-controller="Users" asp-action="Index">
            Все пользователи
        </a>
        <a class="navbar-account" asp-controller="StudentRedactor" asp-action="Index">
            Студенты
        </a>
    </div>

    <div class="admin_row">
        <div class="admin_title">
            <h2>Администратор</h2>
            @{
                if (ClaimTypes.Role == "OnlyForAdmin")
                {
                    <h1>Добавление студентов в систему</h1>
                    <h1>Добавление студентов в систему</h1>
                }
                else if (ClaimTypes.Role == "Администратор")
                {
                    <h1>Добавление студентов в систему</h1>

                }
            }
        </div>

        <dl class="row">
            <dt class="col-sm-2">
                Логин
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.login)
            </dd>
            <dt class="col-sm-2">
                Пароль
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.password)
            </dd>
            <dt class="col-sm-2">
                Роль
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.role)
            </dd>
        </dl>
    </div>

    @{
        if (ClaimTypes.Role == "OnlyForAdmin")
        {
            <h1>Добавление студентов в систему</h1>
            <h1>Добавление студентов в систему</h1>
        }
        else if (ClaimTypes.Role == "Администратор")
        {
            <h1>Добавление студентов в систему</h1>

        }
    }
</div>
