@model webUniversity.Models.ControlForm

@{
    ViewData["Title"] = "Удаление формы контроля";
}
@section Header {
        <div class="header_section">
            <div class="header_title">
                <p>УНИВЕРСИТЕТ</p>
                <div class="header_divider"> </div>
                <div class="header_portal_title">
                    <p>ОБРАЗОВАТЕЛЬНЫЙ ПОРТАЛ ТЕХНИЧЕСКОГО УНИВЕРСИТЕТА</p>
                </div>
            </div>
        </div>
        <div class="header_section">
            <div class="header_account">
                <div class="back-btn">
                <a asp-action="Index" asp-controller="Employee">Заявления</a>
                </div>
                <div class="back-btn">
                    <a asp-action="Logout" asp-controller="Account">Выйти из аккаунта</a>
                </div>
            </div>
        </div>
}

<div class="student_main">
    <h1>Удалить форму контроля</h1>
    <div class="delete_main">
        <dl class="myRowDel">
            <dt class = "col-sm-2">
                Код
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.code)
            </dd>
        </dl>
        <dl class="myRowDel">
            <dt class = "col-sm-2">
                Название
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.name)
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <div class="buttons">
            <div class="form-group_btn_1">
                    <input type="hidden" asp-for="controlFormID" />
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
            <div class="form-group_btn_2">
                <a asp-action="Index">
                    <input value="Cancel" class="btn btn-primary" readonly="readonly"> 
                </a>
            </div>
        </div>
    </form>
</div>